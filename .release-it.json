{
    "hooks": {},
    "git": {
        "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
        "requireCleanWorkingDir": true,
        "requireBranch": false,
        "requireUpstream": true,
        "requireCommits": true,
        "addUntrackedFiles": false,
        "commit": true,
        "commitMessage": "Release ${version}",
        "commitArgs": [],
        "tag": true,
        "tagName": null,
        "tagMatch": null,
        "tagAnnotation": "Release ${version}",
        "tagArgs": [],
        "push": true,
        "pushArgs": ["--follow-tags"],
        "pushRepo": ""
    },
    "npm": {
        "publish": true,
        "publishPath": ".",
        "publishArgs": [],
        "tag": null,
        "otp": null,
        "ignoreVersion": false,
        "skipChecks": true,
        "timeout": 100000
    },
    "github": {
        "release": false
    },
    "gitlab": {
        "release": false
    }
}
